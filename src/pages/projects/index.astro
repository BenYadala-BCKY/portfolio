---
import "../../styles/global.css";
import { projects } from "../../data/projects";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Projects</title>
  </head>

  <body class="bg-gradient-to-b from-indigo-50 via-neutral-50 to-white text-neutral-900">
    <main class="mx-auto max-w-4xl px-6 py-12">
      <a href="/" class="text-sm text-neutral-600 hover:underline">‚Üê Back</a>

      <h1 class="mt-4 text-3xl font-bold">Projects</h1>
      <p class="mt-2 text-neutral-600">
        Selected work across data engineering, automation, and applied AI.
      </p>

      <p class="mt-4 text-sm text-neutral-500">
        Total projects: {projects.length}
      </p>

      <div class="mt-8 grid gap-6">
        {projects.map((p) => (
          <section class="rounded-2xl bg-white p-6 shadow-sm ring-1 ring-indigo-100">
            <h2 class="text-lg font-semibold">{p.title}</h2>
            <p class="mt-2 text-neutral-600">{p.oneLiner}</p>

            <ul class="mt-3 list-disc space-y-1 pl-5 text-sm text-neutral-700">
              {p.impact.map((i) => <li>{i}</li>)}
            </ul>

            <div class="mt-4 flex flex-wrap gap-2">
              {p.stack.map((s) => (
                <span class="rounded-full bg-indigo-50 px-3 py-1 text-xs text-indigo-900 ring-1 ring-indigo-100">
                  {s}
                </span>
              ))}
            </div>

            <a
              href={`/projects/${p.slug}`}
              class="mt-4 inline-block text-sm font-medium text-indigo-700 hover:underline"
            >
              View details
            </a>
          </section>
        ))}
      </div>
    </main>
  </body>
</html>
