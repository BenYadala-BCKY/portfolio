---
import "../../styles/global.css";
import { projects } from "../../data/projects";

export async function getStaticPaths() {
  return projects.map((p) => ({
    params: { slug: p.slug },
    props: { project: p },
  }));
}

const { project } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{project.title}</title>
    <meta name="description" content={project.oneLiner} />
  </head>

  <body class="bg-gradient-to-b from-indigo-50 via-neutral-50 to-white text-neutral-900">
    <main class="mx-auto max-w-4xl px-6 py-12">
      <a href="/projects" class="text-sm text-neutral-600 hover:underline">
        ← Back to projects
      </a>

      <header class="mt-6 rounded-2xl bg-white p-8 shadow-sm ring-1 ring-indigo-100">
        <h1 class="text-3xl font-bold tracking-tight">{project.title}</h1>
        <p class="mt-2 text-lg text-neutral-700">{project.oneLiner}</p>

        <div class="mt-4 flex flex-wrap gap-2">
          {project.stack.map((s) => (
            <span class="rounded-full bg-indigo-50 px-3 py-1 text-xs text-indigo-900 ring-1 ring-indigo-100">
              {s}
            </span>
          ))}
        </div>

        {project.links?.length ? (
          <div class="mt-6 flex flex-wrap gap-3">
            {project.links.map((l) => (
              <a class="rounded-lg border bg-white px-4 py-2 text-sm hover:bg-neutral-100" href={l.href} target="_blank" rel="noreferrer">
                {l.label}
              </a>
            ))}
          </div>
        ) : null}
      </header>

      <section class="mt-10 space-y-6">
        <div class="rounded-2xl bg-white p-6 shadow-sm ring-1 ring-indigo-100">
          <h2 class="text-xl font-semibold text-indigo-900">Impact</h2>
          <ul class="mt-3 list-disc space-y-2 pl-5 text-neutral-700">
            {project.impact.map((i) => <li>{i}</li>)}
          </ul>
        </div>
      </section>

      <footer class="mt-16 text-center text-sm text-neutral-500">
        © {new Date().getFullYear()} Ben Yadala
      </footer>
    </main>
  </body>
</html>
