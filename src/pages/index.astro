---
import { profile } from "../data/profile";
import { projects } from "../data/projects";

const featured = projects.slice(0, 3);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{profile.name} | Portfolio</title>
    <meta name="description" content={profile.summary} />
  </head>

  <body class="bg-white text-neutral-900">
    <main class="mx-auto max-w-3xl px-6 py-12">
      <header class="space-y-4">
        <p class="text-sm text-neutral-600">{profile.location}</p>
        <h1 class="text-4xl font-bold tracking-tight">{profile.name}</h1>
        <p class="text-lg text-neutral-700">{profile.headline}</p>
        <p class="text-neutral-700">{profile.summary}</p>

        <div class="flex flex-wrap gap-2 pt-2">
          <a class="rounded-lg border px-4 py-2 text-sm hover:bg-neutral-50" href={profile.links.linkedin} target="_blank" rel="noreferrer">LinkedIn</a>
          <a class="rounded-lg border px-4 py-2 text-sm hover:bg-neutral-50" href={profile.links.github} target="_blank" rel="noreferrer">GitHub</a>
          <a class="rounded-lg border px-4 py-2 text-sm hover:bg-neutral-50" href={profile.links.resume} target="_blank" rel="noreferrer">Resume</a>
          <a class="rounded-lg border px-4 py-2 text-sm hover:bg-neutral-50" href={profile.links.email}>Email</a>
          <a class="rounded-lg border px-4 py-2 text-sm hover:bg-neutral-50" href="/projects">Projects</a>
        </div>

        <ul class="list-disc space-y-1 pl-5 text-neutral-700">
          {profile.highlights.map((h) => <li>{h}</li>)}
        </ul>
      </header>

      <hr class="my-10 border-neutral-200" />

      <section class="pt-12">
        <h2 class="text-xl font-semibold">Featured projects</h2>

        <div class="mt-4 space-y-4">
          {featured.map((p) => (
            <a href={`/projects#${p.slug}`} class="block rounded-xl border p-4 hover:bg-neutral-50">
              <div class="flex items-start justify-between gap-4">
                <div>
                  <h3 class="font-medium">{p.title}</h3>
                  <p class="mt-1 text-sm text-neutral-700">{p.oneLiner}</p>
                </div>
                <span class="text-sm text-neutral-500">View</span>
              </div>

              <div class="mt-3 flex flex-wrap gap-2">
                {p.stack.slice(0, 7).map((s) => (
                  <span class="rounded-full bg-neutral-100 px-3 py-1 text-xs">{s}</span>
                ))}
              </div>
            </a>
          ))}
        </div>
      </section>

      <section class="pt-12">
        <h2 class="text-xl font-semibold">Core skills</h2>
        <div class="mt-4 flex flex-wrap gap-2">
          {profile.skills.map((s) => (
            <span class="rounded-full bg-neutral-100 px-3 py-1 text-sm">{s}</span>
          ))}
        </div>
      </section>

      <footer class="pt-14 text-sm text-neutral-600">
        <p>Â© {new Date().getFullYear()} {profile.name}</p>
      </footer>
    </main>
  </body>
</html>
