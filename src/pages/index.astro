---
import "../styles/global.css";
import { profile } from "../data/profile";
import { projects } from "../data/projects";

const featured = projects.slice(0, 3);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{profile.name} | Portfolio</title>
    <meta name="description" content={profile.summary} />
  </head>

  <body class="bg-gradient-to-b from-indigo-50 via-neutral-50 to-white text-neutral-900">
    <main class="mx-auto max-w-4xl px-6 py-14">
      <section class="rounded-2xl bg-white p-8 shadow-sm ring-1 ring-indigo-100">
        <p class="text-sm text-neutral-500">{profile.location}</p>

        <h1 class="mt-2 text-4xl font-bold tracking-tight">
          {profile.name}
        </h1>

        <p class="mt-3 text-lg text-neutral-700">
          {profile.headline}
        </p>

        <p class="mt-4 text-neutral-600">
          {profile.summary}
        </p>

        <div class="mt-6 flex flex-wrap gap-3">
          <a class="rounded-lg bg-indigo-600 px-4 py-2 text-sm font-medium text-white hover:bg-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-400" href={profile.links.linkedin} target="_blank">LinkedIn</a>
          <a class="rounded-lg border px-4 py-2 text-sm hover:bg-neutral-100" href={profile.links.github} target="_blank">GitHub</a>
          <a class="rounded-lg border px-4 py-2 text-sm hover:bg-neutral-100" href={profile.links.resume} target="_blank">Resume</a>
          <a class="rounded-lg border px-4 py-2 text-sm hover:bg-neutral-100" href={profile.links.email}>Email</a>
        </div>

        <ul class="mt-6 list-disc space-y-1 pl-5 text-neutral-700">
          {profile.highlights.map((h) => <li>{h}</li>)}
        </ul>
      </section>

      <section class="mt-12">
        <h2 class="text-2xl font-semibold text-indigo-900">Featured projects</h2>

        <div class="mt-6 grid gap-6">
          {featured.map((p) => (
            <a href={`/projects#${p.slug}`} class="block rounded-2xl bg-white p-6 shadow-sm ring-1 ring-indigo-100 transition hover:-translate-y-1 hover:shadow-md hover:ring-indigo-300">
              <h3 class="text-lg font-semibold">{p.title}</h3>
              <p class="mt-2 text-neutral-600">{p.oneLiner}</p>

              <div class="mt-4 flex flex-wrap gap-2">
                {p.stack.slice(0, 6).map((s) => (
                  <span class="rounded-full bg-indigo-50 px-3 py-1 text-xs text-indigo-900 ring-1 ring-indigo-100">
                    {s}
                  </span>
                ))}
              </div>
            </a>
          ))}
        </div>
      </section>

      <section class="mt-12">
        <h2 class="text-2xl font-semibold">Core skills</h2>
        <div class="mt-4 flex flex-wrap gap-2">
          {profile.skills.map((s) => (
            <span class="rounded-full bg-white px-4 py-2 text-sm shadow-sm ring-1 ring-indigo-100">
              {s}
            </span>
          ))}
        </div>
      </section>

      <footer class="mt-16 text-center text-sm text-neutral-500">
        Â© {new Date().getFullYear()} {profile.name}
      </footer>
    </main>
  </body>

</html>
